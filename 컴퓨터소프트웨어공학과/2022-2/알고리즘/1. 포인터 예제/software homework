class circle {
private:
    double radius;
    double pi;
public:
    double getArea(); { return 2*pi*radius; }
}


class rectangle {
private:
    double width, height;
public:
    double getArea(); { return width*height; }
}
 

class triangle {
private:
    double width, height;
public:
    double getArea(); { return (width*height)/2;}
}
 